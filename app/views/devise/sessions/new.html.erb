<div class="island">
    <h1>Login</h1>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.label :email %>
      <%= f.email_field :email, {:class => "text-input"} %></div>

      <div><%= f.label :password %>
      <%= f.password_field :password, {:class => "text-input"} %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, {:class => "check-label"} %></div>
      <% end -%>

      <div><%= f.submit "Sign in" %></div>
    <% end %>

    <%= render :partial => "devise/shared/links" %>
</div>