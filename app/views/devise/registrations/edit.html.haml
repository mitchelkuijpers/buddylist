#side-content
  -#= render partial: "devise/shared/sidebar", locals: { side_nav: :profile }

#main-content
  .island

    %h1 Edit profile

    .gray-area
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, class: 'properties') do |f|
        = render partial: "layouts/common/validation_errors", locals: { model: resource }

        .label
          = f.label :name
        .field
          = f.text_field :name, {:class => "text-input"}

        .label
          = f.label :email
        .field
          = f.email_field :email, {:class => "text-input"}

        %hr

        .label
          = f.label :password
        .field
          = f.password_field :password, {:class => "text-input"}
          .hint
            %em (leave blank if you don't want to change it)

        .label
          = f.label :password_confirmation
        .field
          = f.password_field :password_confirmation, {:class => "text-input"}

        %hr

        .label
          = f.label :current_password
        .field
          = f.password_field :current_password, {:class => "text-input"}

        %hr

        .label
        .field
          .delete
            %p or: #{link_to "cancel my account", registration_path(resource_name), :confirm => "Are you sure? This action can't be undone.'", :method => :delete }
          = f.submit "Update", class: [:uiButton, :uiButtonLarge, :uiButtonConfirm]
