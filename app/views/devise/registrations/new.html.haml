#side-content

#main-content
  .island

    %h1 Create an account

    .gray-area
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form|
        = render partial: "layouts/common/validation_errors", locals: { model: resource }

        .label
          = form.label :name
        .field
          = form.text_field :name, {:class => "text-input"}

        %hr

        .label
          = form.label :email
        .field
          = form.email_field :email, {:class => "text-input"}

        %hr

        .label
          = form.label :password
        .field
          = form.password_field :password, {:class => "text-input"}

        .label
          = form.label :password_confirmation

        .field
          = form.password_field :password_confirmation, {:class => "text-input"}

        %hr

        .label
        .field
          = form.submit "Create account", class: [:uiButton, :uiButtonLarge, :uiButtonConfirm]

    = render :partial => "devise/shared/links"


