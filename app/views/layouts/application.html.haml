!!! 5
%html

  %head

    %meta{ charset: "UTF-8" }
    %title Fauxbook
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body

    %header#header
      .container
        %a#logo{ href: root_url }
          = image_tag "fauxbook-logo.png"
        = render partial: "users/search" if user_signed_in?
        = render partial: "users/menu"

    #content.container

      - unless alert.nil? && notice.nil?
        .notifications
          - unless alert.nil?
            .message.warning= alert
          - unless notice.nil?
            .message.info= notice
      = yield

