.post.status-post
  %p.author
    - unless post.author == post.receiver
      #{link_to_author post.author } Â»
    #{link_to_author post.receiver }
  %p
    = post.description

  %ul.menu
    %li.date-created
      = post.created_at.strftime 'On %d-%m-%Y at %H:%M'
    %li
      = render partial: "likables/likable", locals: { likable: post }

  .reactions
    - unless (liking_persons = format_liking_persons(post)).blank?
      .liking-persons= liking_persons

    = render partial: "commentable/commentable", locals: { commentable: post }
