.person-sidebar

  = user_photo user, :sidebar, :photo


  %ul.side-nav{ class: side_nav ||= nil }
    %li.wall
      %a{ href: user_url(user) }
        %span.icon.small.messages
        Wall
    - if can? :view_albums, user
      %li.albums
        %a{ href: albums_url(user) }
          %span.icon.small.photos
          Albums


  - if can? :view_friends, user

    %p
      = link_to "Friends (#{user.friends.count})", ""

    %ul.user-friends
      - for friend in user.friends
        %li
          = user_photo friend, :medium
          = link_to_author friend

  %ul.user-options
