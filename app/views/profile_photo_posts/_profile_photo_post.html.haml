.post

  = user_picture post.created_by

  %p
    = link_to_author post.created_by
    changed his profile picture.

  %ul.menu.reactions-menu
    %li
      #{time_ago_in_words post.created_at} ago

    - if can? :create_like, post.created_by.profile_photos.media.last
      %li
        = render partial: "likables/likable", locals: { likable: post.created_by.profile_photos.media.last }

  .reactions
    - unless (liking_users = format_liking_users(post.created_by.profile_photos.media.last)).blank?
      .liking-users
        %span.icon.small.like
        = liking_users
